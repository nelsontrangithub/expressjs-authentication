<%- layout('layout.ejs') %>
<div>
    <div class="page-header">
        <h1 class="text-info"><%- title %></h1>
    </div>
    <form action="/edit" method="post" >
        <input type="hidden" name="_id" value="<%= jsonData._id %>" /><br />
        <div class="form-group">
            <input type="text" name="FirstName" value="<%= jsonData.FirstName %>" class="form-control"/>
        </div>
        <div class="form-group">
            <input type="text" name="LastName" value="<%= jsonData.LastName %>" class="form-control"/>
        </div>
        <div class="form-group">
            <input type="text" name="School" value="<%= jsonData.School %>" class="form-control"/>
        </div>
        <div class="form-group">
            <input type="text" name="StartDate" value="<%= jsonData.StartDate %>" class="form-control"/>
        </div>
        <input type="submit" value="Update Student" class="btn btn-primary" />
        <a href="/" class="btn btn-primary" >Cancel</a>
    </form>
</div> 
